# =============================================================================
# MyVibe Telegram Bot - Environment Configuration
# ЭТАП 1: Система управления доступом и пользователями 
# =============================================================================

# ==================== BOT CONFIGURATION ====================
# Telegram Bot Token (получить от @BotFather)
BOT_TOKEN=your_bot_token_here

# Режим отладки (True для разработки, False для продакшена)
DEBUG=True

# ==================== DATABASE CONFIGURATION ====================
# MySQL Database Connection (XAMPP)
# Формат: mysql+pymysql://username:password@host:port/database_name
DATABASE_URL=mysql+pymysql://root:@localhost:3306/telegram_bot

# Показывать SQL запросы в логах (True для отладки)
DATABASE_ECHO=False

# Максимальное количество подключений в пуле
DATABASE_POOL_SIZE=10

# Максимальное количество подключений сверх пула
DATABASE_MAX_OVERFLOW=20

# Таймаут подключения к базе данных (секунды)
DATABASE_TIMEOUT=30

# ==================== LOGGING CONFIGURATION ====================
# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Формат логов
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Папка для логов
LOG_DIR=logs

# Максимальный размер файла лога (MB)
LOG_MAX_SIZE=10

# Количество файлов логов для хранения
LOG_BACKUP_COUNT=5

# ==================== SECURITY CONFIGURATION ====================
# Секретный ключ для подписи данных
SECRET_KEY=your-super-secret-key-change-in-production

# Список ID администраторов (через запятую)
# Получить свой ID можно от бота @userinfobot
ADMIN_IDS=123456789,987654321

# ==================== ACCESS CONTROL CONFIGURATION ====================
# Включить систему контроля доступа (True/False)
ACCESS_CONTROL_ENABLED=True

# Разрешить регистрацию новых пользователей (True/False)
ALLOW_USER_REGISTRATION=False

# Роль по умолчанию для новых пользователей
DEFAULT_USER_ROLE=prodavan

# ==================== CACHE CONFIGURATION ====================
# Redis URL для кеширования (опционально)
REDIS_URL=redis://localhost:6379/0

# Время жизни кеша (секунды)
CACHE_TTL=3600

# Включить кеширование (True/False)
CACHE_ENABLED=True

# ==================== DEVELOPMENT SETTINGS ====================
# Включить тестовые команды (только для разработки)
ENABLE_TEST_COMMANDS=True

# Webhook URL (для продакшена, оставить пустым для polling)
WEBHOOK_URL=

# Порт для webhook сервера
WEBHOOK_PORT=8443

# ==================== BUSINESS LOGIC SETTINGS ====================
# Часовой пояс для отчетов
TIMEZONE=Europe/Minsk

# Рабочие дни недели (1=Понедельник, 7=Воскресенье)
WORKING_DAYS=1,2,3,4,5,6

# Время начала рабочего дня (формат HH:MM)
WORK_START_TIME=09:00

# Время окончания рабочего дня (формат HH:MM)
WORK_END_TIME=21:00